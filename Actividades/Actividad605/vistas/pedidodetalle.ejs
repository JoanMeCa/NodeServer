<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Pedido</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
        }
        .btn-container {
            text-align: center;
            margin-top: 20px;
        }
        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }
        button:hover {
            background-color: #0056b3;
        }
        .volver-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
        }
        .volver-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Detalles del pedido</h1>
        <form id="pedidoForm" action="/actualizar-pedido" method="POST">
            <table>
                <tr>
                    <input type="hidden" name="id" value="<%= pedido.id %>">
                    <th>ID</th>
                    <td><%= pedido.id %></td>
                </tr>
                <tr>
                    <th>Usuario</th>
                    <td>
                        <select name="usuario" id="usuario">
                            <% usuarios.forEach(function(usuario) { %>
                                <option value="<%= usuario.ID %>" <%= pedido.id_usuario === usuario.ID ? 'selected' : '' %>><%= usuario.nombre %></option>
                            <% }); %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th>Producto</th>
                    <td>
                        <select name="producto" id="producto">
                            <% productos.forEach(function(producto) { %>
                                <option value="<%= producto.id %>" <%= pedido.id_producto === producto.id ? 'selected' : '' %>><%= producto.nombre %></option>
                            <% }); %>
                        </select>
                    </td>
                </tr>
            </table>
            <div class="btn-container">
                <button type="submit" name="action" value="guardarSalir">Guardar y salir</button>
                <button>Volver sin Guardar</button>
            </div>
        </form>
    </div>
</body>
</html>